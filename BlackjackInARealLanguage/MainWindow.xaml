        xmlns:local="clr-namespace:BlackjackInARealLanguage"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280" WindowStartupLocation="CenterScreen"
        Name="TheWindow">
    <Window.Resources>
