        <BitmapImage x:Key="heartsK" UriSource="Resources/hk.png" />
        <BitmapImage x:Key="cardblank" UriSource="Resources/blank.png" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="89*"/>
            <ColumnDefinition Width="113*"/>
            <ColumnDefinition Width="113*"/>
            <ColumnDefinition Width="149*"/>
            <ColumnDefinition Width="391*"/>
            <ColumnDefinition Width="135*"/>
            <ColumnDefinition Width="135*"/>
            <ColumnDefinition Width="136*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="135*"/>
            <RowDefinition Height="138*"/>
            <RowDefinition Height="75*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="1" Grid.Column="1" Click="StartGameButtonPress">
            Start Game
        </Button>
        <Button Grid.Row="1" Grid.Column="2" Click="HitButtonPress">
            Hit
        </Button>
        <Button Grid.Row="2" Grid.Column="4" Click="SetBetButtonPress">
            Set Bet
        </Button>
        <Button Grid.Row="3" Grid.Column="2" Click="StayButtonPress">
            Stay
        </Button>

        <Viewbox Grid.Row="5" Grid.Column="5">
            <TextBlock Name="MiddleLabel" Text="BLACKJACK"/>
        </Viewbox>

        <Viewbox  Grid.Row="1" Grid.Column="3">
            <Label Content="Bet Amount"/>
        </Viewbox>
        
        <TextBox Grid.Row="2" Grid.Column="3" Name="BetAmount">
            
        </TextBox>

        <Viewbox Grid.Row="5" Grid.Column="2">
            <TextBlock Text="Player Money"/>
        </Viewbox>

        <Viewbox Grid.Row="6" Grid.Column="2">
            <TextBlock Name="PlayerMoneyLabel" Text="0"/>
        </Viewbox>

        <Viewbox Grid.Row="7" Grid.Column="2">
            <TextBlock Text="Card Value"/>
        </Viewbox>

        <Viewbox Grid.Row="8" Grid.Column="2">
            <TextBlock Name="PlayerCardValueLabel" Text="0"/>
        </Viewbox>

        <Viewbox Grid.Row="9" Grid.Column="2">
            <TextBlock Text="Player"/>
        </Viewbox>

        <Viewbox Grid.Row="5" Grid.Column="6">
            <TextBlock Text="Total in Bets"/>
        </Viewbox>

        <Viewbox Grid.Row="6" Grid.Column="6">
            <TextBlock Name="TotalBetsLabel" Text="0"/>
        </Viewbox>

        <Viewbox Grid.Row="7" Grid.Column="6">
            <TextBlock Text="Card Value"/>
        </Viewbox>

        <Viewbox Grid.Row="8" Grid.Column="6">
            <TextBlock Name="DealerCardValueLabel" Text="0"/>
        </Viewbox>
        
        <Viewbox Grid.Row="9" Grid.Column="6">
            <TextBlock Text="Dealer"/>
        </Viewbox>

        <Rectangle Grid.Row="11" Grid.Column="2" Name="PlayerCard1">
            <Rectangle.Fill>
                <ImageBrush ImageSource="{StaticResource cardback}"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Grid.Row="11" Grid.Column="3" Name="PlayerCard2">
            <Rectangle.Fill>
                <ImageBrush ImageSource="{StaticResource cardback}"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Grid.Row="12" Grid.Column="2" Name="PlayerCard3">
            <Rectangle.Fill>
                <ImageBrush ImageSource="{StaticResource cardback}"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Grid.Row="12" Grid.Column="3" Name="PlayerCard4">
            <Rectangle.Fill>
                <ImageBrush ImageSource="{StaticResource cardback}"/>
            </Rectangle.Fill>
        </Rectangle>

        <Rectangle Grid.Row="11" Grid.Column="6" Name="DealerCard1">
            <Rectangle.Fill>
                <ImageBrush ImageSource="{StaticResource cardback}"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Grid.Row="11" Grid.Column="7" Name="DealerCard2">
            <Rectangle.Fill>
                <ImageBrush ImageSource="{StaticResource cardback}"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Grid.Row="12" Grid.Column="6" Name="DealerCard3">
            <Rectangle.Fill>
                <ImageBrush ImageSource="{StaticResource cardback}"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Grid.Row="12" Grid.Column="7" Name="DealerCard4">
            <Rectangle.Fill>
                <ImageBrush ImageSource="{StaticResource cardback}"/>
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</Window>
