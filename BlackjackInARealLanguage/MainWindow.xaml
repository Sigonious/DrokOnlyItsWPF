        <BitmapImage x:Key="diamonds10" UriSource="Resources/d10.png" />
        <BitmapImage x:Key="diamondsJ" UriSource="Resources/dj.png" />
        <BitmapImage x:Key="diamondsQ" UriSource="Resources/dq.png" />
        <BitmapImage x:Key="diamondsK" UriSource="Resources/dk.png" />
        <BitmapImage x:Key="clubsA" UriSource="Resources/cA.png" />
        <BitmapImage x:Key="clubs2" UriSource="Resources/c2.png" />
